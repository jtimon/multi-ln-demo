demo: python /wd/multiln/bin/demo.py chain_1 chain_2


# bitcoind nodes:

chain_1_bitcoind: bitcoind -chain=chain_1 -conf=/wd/conf/bitcoind.conf -datadir=/wd/daemon-data/chain_1_bitcoind/

